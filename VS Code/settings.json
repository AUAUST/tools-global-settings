{
  "editor": {
    "fontSize": 15.75,
    "lineHeight": 22,
    "fontFamily": "\"Suisse Int'l Mono\", Menlo, Monaco, 'Courier New', monospace",
    "fontLigatures": true,
    "tabSize": 2,
    "detectIndentation": false,
    "accessibilitySupport": "off",
    "inlineSuggest": {
      "enabled": true,
      "showToolbar": "always"
    },
    "formatOnPaste": true,
    "formatOnSave": true,
    "formatOnType": true,
    "defaultFormatter": "esbenp.prettier-vscode",
    "minimap": {
      "enabled": false
    }
  },
  "explorer": {
    "confirmDragAndDrop": false,
    "compactFolders": false,
    "decorations": {
      "badges": true,
      "colors": true
    },
    "incrementalNaming": "smart"
  },
  "files": {
    "enableTrash": true,
    "encoding": "utf8",
    "hotExit": "off",
    "insertFinalNewline": true,
    "trimFinalNewlines": true,
    "trimTrailingWhitespace": true,
    "watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true,
      "**/.hg/store/**": true
    },
    "associations": {
      "*.config": "json",
      "*.env": "dotenv",
      // InDesign JavaScript
      "*.idjs": "javascript",
      // AUAUST File formats
      "*.aajson": "json",
      "*.aayaml": "yaml",
      "*.aayml": "yaml",
      "*.aajs": "javascript"
    }
  },
  "github": {
    "copilot": {
      "enable": {
        "*": true
      }
    }
  },
  "git": {
    "enabled": true,
    "decorations": {
      "enabled": true
    },
    "autofetch": true
  },
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "[auaust-md]": {
    "editor.wordWrap": "on"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[liquid]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "Shopify.theme-check-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "json": {
    "format": {
      "keepLines": true
    },
    "schemas": [
      // AUAUST's InDesign GENERATED configuration files
      {
        // Paragraph and Character Styles
        "fileMatch": ["styles.aajson"],
        "url": "https://raw.githubusercontent.com/AUAUST/tools-indesign-schemas/main/styles.json"
      },
      {
        // Swatches
        "fileMatch": ["colors.aajson"],
        "url": "https://raw.githubusercontent.com/AUAUST/tools-indesign-schemas/main/colors.json"
      },
      {
        // Document Settings
        "fileMatch": ["document.aajson"],
        "url": "https://raw.githubusercontent.com/AUAUST/tools-indesign-schemas/main/document.json"
      }
    ]
  },
  "yaml.schemas": {
    // AUAUST's InDesign GENERATED configuration files
    "https://raw.githubusercontent.com/AUAUST/tools-indesign-schemas/main/styles.json": [
      "styles.aayaml",
      "styles.aayml"
    ],
    "https://raw.githubusercontent.com/AUAUST/tools-indesign-schemas/main/colors.json": [
      "colors.aayaml",
      "colors.aayml"
    ],
    "no": ["site.yml"]
  },

  // Denizen MC Plugin
  "denizenscript.theme_colors.comment_normal": "#818194",
  "denizenscript.theme_colors.bad_space": "#FFFFFF|background=#bc4b4b",
  "denizenscript.theme_colors.colons": "#00bacc|style=bold",
  "denizenscript.theme_colors.command": "#ff8bf3|style=regular",
  "denizenscript.theme_colors.comment_code": "#7fff7f",
  "denizenscript.theme_colors.comment_header": "#f47d78",
  "denizenscript.theme_colors.comment_todo": "#fee75c|style=bold",
  "denizenscript.theme_colors.key": "#f79f57",
  "denizenscript.theme_colors.key_inline": "#f79f57|style=regular",
  "denizenscript.theme_colors.quote_double": "#8aecf3",
  "denizenscript.theme_colors.quote_single": "#8aecf3",
  "denizenscript.theme_colors.space": "#61616f",
  "denizenscript.theme_colors.tag": "#a1a1ac",
  "denizenscript.theme_colors.tag_dot": "#d951ff",
  "denizenscript.theme_colors.tag_param": "#696cfc",
  "denizenscript.theme_colors.def_name": "#fee75c",
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.editor.untitled.hint": "text",
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "workbench.fontAliasing": "default",
  "workbench.colorCustomizations": {
    // Text color
    "foreground": "#efeff5",
    "disabledForeground": "#efeff5aa",
    // Shadow behind Search/Find box
    "widget.shadow": "#46464f",
    // Selection
    "selection.background": "#8fff8f44",
    // Icons
    "icon.foreground": "#ff8bf3",
    // Text links
    "textLink.activeForeground": "#7fff7f",
    "textLink.foreground": "#fee75c",
    "editorLink.activeForeground": "#fee75c",
    // Close file btn
    "toolbar.hoverBackground": "#61616f",
    "toolbar.hoverOutline": "#61616f",
    "toolbar.activeBackground": "#61616f",
    // Buttons
    "button.background": "#fee75c",
    "button.foreground": "#000000",
    "button.hoverBackground": "#7fff7f",
    // Checkbox
    // "checkbox.background": "#bdfbff",
    // "checkbox.foreground": "#000000",
    "checkbox.border": "#46464f",
    // Dropdown menus
    "dropdown.background": "#46464f",
    "dropdown.listBackground": "#46464f",
    "dropdown.border": "#46464f",
    "dropdown.foreground": "#efeff5",
    // Scrollbar
    "scrollbar.shadow": "#46464f",
    "scrollbarSlider.activeBackground": "#61616f",
    "scrollbarSlider.background": "#46464f",
    "scrollbarSlider.hoverBackground": "#52525a",
    // Sidebar
    "sideBar.background": "#36363b",
    "sideBar.foreground": "#efeff5",
    "sideBar.border": "#61616f",
    "sideBarTitle.foreground": "#efeff5",
    // Tabs
    "editorGroupHeader.tabsBorder": "#61616f",
    "editorGroupHeader.tabsBackground": "#36363b",
    "editorGroupHeader.border": "#61616f",
    "tab.border": "#61616f",
    "tab.activeForeground": "#efeff5",
    "tab.inactiveForeground": "#efeff5",
    "tab.inactiveBackground": "#36363b",
    "tab.activeBackground": "#52525a",
    // Editor (code/writing area)
    "editor.background": "#171719",
    "editor.foreground": "#efeff5",
    "editorLineNumber.foreground": "#52525a",
    "editorLineNumber.activeForeground": "#88889e",
    // Selections
    "editor.selectionBackground": "#8aecf3ae",
    "editor.selectionHighlightBackground": "#8aecf338",
    // 7fff7f https://apademide.ch/
    "editor.findMatchBackground": "#7fff7f84",
    "editor.findMatchHighlightBackground": "#7fff7f38",
    "editor.hoverHighlightBackground": "#efeff53e",
    "editor.lineHighlightBackground": "#27272a",
    "editorUnicodeHighlight.border": "#fee65cab",
    "editorUnicodeHighlight.background": "#fee65c5d",
    // Brackets pairs
    // "editorBracketHighlight.foreground1" (1 to 6 available)
    "editorBracketHighlight.unexpectedBracket.foreground": "#f47d78",
    "editorOverviewRuler.background": "#171719",
    "editorOverviewRuler.border": "#61616f",
    // Colors
    "editorError.foreground": "#bc4b4b",
    "editorError.background": "#bc4b4b61",
    "editorWarning.foreground": "#f79f57",
    "editorWarning.background": "#f79f5761",
    // Gutter
    "editorGutter.addedBackground": "#7fff7f61",
    "editorGutter.modifiedBackground": "#f79f5761",
    "editorGutter.deletedBackground": "#f47d7861"
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "class": "#7fff7f",
      "function": "#ff8bf3",
      "method": "#ff8bf3",
      "namespace": "#00bacc",
      "parameter": "#fee75c",
      "property.declaration": "#8aecf3",
      "variable": "#fee75c",
      "variable.readonly": "#f79f57",
      "variable.defaultLibrary": "#8aecf3",
      "property": "#8aecf3",
      "comment": "#818192"
    }
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      // White
      // Used mainly for text, strings, and other "normal", static things
      {
        "scope": [
          "text",
          "string",
          "string.quoted",
          "string.regexp.js",
          "meta.group.regexp",
          "keyword.other.unit",
          "punctuation.separator.key-value",
          "entity.other.attribute-name.id.css",
          "entity.other.attribute-name.class.css",
          "constant.other.color.rgb-value.hex.css",
          "constant.other.character-class.set.regexp",
          "punctuation.accessor.ts",
          "keyword.operator.class",
          "punctuation.separator.inheritance",
          "punctuation.separator.delimiter"
        ],
        "settings": { "foreground": "#efeff5" }
      },
      // Light Gray
      // Used for generic highlights, such as bold/italic text in markdown
      // Pretty much neutral and free to use anywhere a color with a strong meaning isn't needed
      {
        "scope": [
          "markup.bold",
          "entity.other.attribute-name",
          "punctuation.definition.group.regexp",
          "markup.italic",
          "punctuation.definition.tag",
          "markup.placeholder.ponctuation.open_argument"
        ],
        "settings": { "foreground": "#a1a1ac" }
      },
      // Medium Gray
      // Used for comments
      {
        "scope": ["comment", "markup.ignored"],
        "settings": { "foreground": "#818192" }
      },
      // Dark Gray
      // Used for symbols that are part of markup synthax, but aren't rendered in the final document
      // Also for opening and closing comments symbols
      {
        "scope": [
          "markup.placeholder",
          "markup.bold.symbol",
          "markup.italic.symbol",
          "markup.heading.symbol",
          "markup.inline.key.symbol",
          "markup.multi_line.key.symbol",
          "punctuation.definition",
          "punctuation.attribute-shorthand.event.html.vue",
          "punctuation.attribute-shorthand.bind.html.vue"
        ],
        "settings": { "foreground": "#61616f" }
      },
      // Purple
      // Used mainly for control flow keywords, i.e. if, else, for, while, etc.
      // Also used for other anchors, such as CSS @-rules and RegEx anchors
      {
        "scope": [
          "keyword.control",
          "entity.name.tag.control.liquid",
          "entity.name.tag.conditional.liquid",
          "entity.name.tag.iteration.liquid",
          "entity.name.tag.variable.liquid",
          "keyword.control.anchor.regexp",
          "markup.inline.key.name",
          "markup.multi_line.key.name",
          "keyword.other"
        ],
        "settings": { "foreground": "#d951ff" }
      },
      // Pink
      // Used mainly for functions, methods, and other things that are "called" or "invoked"
      // Also used for CSS combinators
      {
        "scope": [
          "entity.name.function",
          "support.function",
          "constant.other.character-class.regexp",
          "keyword.operator.combinator.css",
          "markup.placeholder.function"
        ],
        "settings": { "foreground": "#ff8bf3" }
      },
      // Error Red
      // Used for errors, such as unknown properties, unknown variables, etc.
      {
        "scope": ["markup.placeholder.syntax_error"],
        "settings": { "foreground": "#bc4b4b" }
      },
      // Pretty Red
      // Barely used as it often make think it's an error
      // Still used for CSS * wildcard and RegEx quantifiers
      {
        "scope": [
          "entity.name.tag.wildcard.css",
          "keyword.operator.quantifier.regexp"
        ],
        "settings": { "foreground": "#f47d78" }
      },
      // Orange
      // Used mainly for constants and key names. i.e HTML tags, JSON keys, CSS property names
      {
        "scope": [
          "entity.name.tag",
          "variable.other.constant",
          "support.type.property-name"
        ],
        "settings": { "foreground": "#f79f57" }
      },
      // Yellow
      // Used mainly for dynamic things, i.e. variables, properties, etc. that can change (as opposed to constants)
      // Unknown properties, let "name", and custom AUAUST Markdown placeholders are highlighted in yellow
      {
        "scope": [
          "variable.other",
          "variable.other.regexp",
          "markup.placeholder.custom",
          "punctuation.output.liquid",
          "support.constant.property-value",
          "punctuation.definition.variable.php",
          "entity.name.type.namespace"
        ],
        "settings": { "foreground": "#fee75c" }
      },
      // Green
      // Used mainly for numbers and classes. Custom HTML tags and components are also highlighted in green when using libraries
      {
        "scope": [
          "support.class",
          "constant.numeric",
          "entity.name.tag.custom.css",
          "entity.name.tag.custom.scss",
          "markup.placeholder.argument",
          "meta.tag.custom.start.html",
          "entity.name.type.class",
          "entity.other.inherited-class",
          "entity.other.alias"
        ],
        "settings": { "foreground": "#7fff7f" }
      },
      // Aqua
      // Used mainly for characters that specify meaning to what follows/preceeds, i.e. the # before an hex color, the quotes opening a string or CSS pseudo classes
      // Also used for constant values such as booleans, null, undefined, etc. and the "this" keyword
      {
        "scope": [
          "variable.language",
          "constant.language",
          "support.constant.media.css",
          "keyword.operator.or.regexp",
          "punctuation.definition.string",
          "punctuation.definition.entity.css",
          "punctuation.definition.constant.css",
          "entity.other.attribute-name.pseudo-element.css",
          "markup.multi_line.limit",
          "keyword.other.type"
        ],
        "settings": { "foreground": "#00bacc" }
      },
      // Light Aqua
      // Used for escaping characters in strings and for default object placeholders in AUAUST Markdown
      {
        "scope": [
          "constant.character.escape",
          "markup.placeholder.default",
          "support.other.namespace",
          "keyword.operator.type"
        ],
        "settings": { "foreground": "#8aecf3" }
      },
      // Sky Blue
      // Used for known HTML tags in CSS selectors and in CSS media queries, for the media type
      {
        "scope": [
          "support.type.property-name.media.css",
          "entity.name.tag.css"
        ],
        "settings": { "foreground": "#9CDCFE" }
      },
      // Blue
      // Mainly used for things that are "defined" or "declared", i.e. variables, functions, classes, etc., but the declaration word itself
      // i.e. "const" in "const foo = 1", "function" in "function foo() {}", "class" in "class Foo {}"
      // also used for some other synthax highlights such as <?php ?> in PHP files, -> chainer in AUAUST Markdown placeholders and the !important keyword in CSS
      {
        "scope": [
          "storage.type",
          "punctuation.section.embedded.end.php",
          "keyword.other.important.css",
          "punctuation.section.embedded.begin.php",
          "punctuation.definition.character-class.regexp",
          "keyword.operator.expression.typeof",
          "markup.placeholder.ponctuation.chaining",
          "storage.modifier.async",
          "keyword.operator.expression",
          "storage.modifier",
          "keyword.other.class" // ClassName::class in PHP
        ],
        "settings": { "foreground": "#696cfc" }
      },
      // No style
      // Used to remove the style of some synthax elements that inherit some unwanted bold/italic style
      {
        "scope": [
          "markup.heading",
          "markup.placeholder",
          "markup.bold.symbol",
          "markup.italic.symbol"
        ],
        "settings": { "fontStyle": "" }
      },
      // Italic style
      {
        "scope": ["markup.italic"],
        "settings": { "fontStyle": "italic" }
      },
      // Bold style
      {
        "scope": ["markup.bold"],
        "settings": { "fontStyle": "bold" }
      },
      // AUAUST Markdown
      // Colors specific to AUAUST Markdown that are used only once
      {
        "scope": "markup.heading.text.1",
        "settings": { "foreground": "#F47D78" }
      },
      {
        "scope": "markup.heading.text.2",
        "settings": { "foreground": "#F69272" }
      },
      {
        "scope": "markup.heading.text.3",
        "settings": { "foreground": "#F8A76D" }
      },
      {
        "scope": "markup.heading.text.4",
        "settings": { "foreground": "#FABD67" }
      },
      {
        "scope": "markup.heading.text.5",
        "settings": { "foreground": "#FCD262" }
      },
      {
        "scope": "markup.heading.text.6",
        "settings": { "foreground": "#FEE75C" }
      }
    ]
  },
  "javascript": {
    "updateImportsOnFileMove": {
      "enabled": "always"
    },
    "inlayHints": {
      "functionLikeReturnTypes": {
        "enabled": true
      }
    },
    "format": {
      "semicolons": "insert"
    }
  },
  "colorful-comments.tags": [
    {
      "tag": "!",
      "color": "#bc4b4b",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#696cfc",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#818192",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "AUAUST",
      "color": "#efeff5",
      "strikethrough": false,
      "backgroundColor": "#170049"
    },
    {
      "tag": "* useGlobal",
      "color": "#efeff5",
      "strikethrough": false,
      "backgroundColor": "#170049"
    },
    {
      "tag": "* useLocal",
      "color": "#efeff5",
      "strikethrough": false,
      "backgroundColor": "#170049"
    },
    {
      "tag": "todo",
      "color": "#000000",
      "strikethrough": false,
      "backgroundColor": "#f79f57"
    }
  ],
  "liquid.format.script": {
    "bracePadding": false,
    "braceNewline": false,
    "arrayFormat": "indent",
    "braceAllman": false,
    "correct": false,
    "functionSpace": false,
    "caseSpace": false,
    "objectIndent": "indent"
  },
  "liquid.format.enable": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "git.openRepositoryInParentFolders": "never",
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "yaml.validate": false,
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "intelephense.environment.shortOpenTag": false,
  "python.formatting.provider": "none",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  }
}
